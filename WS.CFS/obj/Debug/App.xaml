<Application
    x:Class="WS.CFS.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WS.CFS"
    xmlns:localData="using:WS.CFS.Data">

    <Application.Resources>
        
        <x:String x:Key="AppName">Citizen Feedback CRM System</x:String>
        <localData:FeedbackDataSource x:Key="feedbackDataSource" />

        <Style x:Key="SmallHeaderTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="LineHeight" Value="40"/>
        </Style>

        <Style x:Key="InputTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="LineHeight" Value="40"/>
        </Style>

    </Application.Resources>

</Application>

